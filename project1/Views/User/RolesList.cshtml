@model List<project1.Models.RolesUsuario>


@{
    ViewBag.Title = "Roles Usuarios";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Roles List</title>
</head>
<body>
    <h2>Listado de Roles</h2>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Role ID</th>
                <th>User ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
            <tr>
                <td>@role.id</td>
                <td>@role.id_user</td>
                <td>@role.id_role</td>

                <td>
                    <a href="@Url.Action("Edit", "User", new { id = role.id })" class="btn btn-success">Edit</a>
                    <a href="@Url.Action("Delete", "User", new { id = role.id })" class="btn btn-danger"> Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>